{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "foreground": "#1e1e2e",
          "background": "#89b4fa",
          "properties": { "display_host": true }
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#cdd6f4",
          "background": "#313244",
          "properties": { "style": "folder", "enable_hyperlink": true }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#1e1e2e",
          "background": "#a6e3a1",
          "properties": { "branch_max_length": 28, "fetch_status": true }
        }
      ]
    }
  ]
}
