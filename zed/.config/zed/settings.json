// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,
  "relative_line_numbers": true,
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true,
    "default_profile": "agent",
    "profiles": {
      "agent": {
        "name": "Agent",
        "tools": {
          "thinking": true,
          "terminal": true,
          "read_file": true,
          "project_notifications": true,
          "open": true,
          "now": true,
          "list_directory": true,
          "move_path": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "edit_file": true,
          "diagnostics": true,
          "delete_path": true,
          "create_directory": true,
          "copy_path": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "filesystem": {
            "tools": {
              "write_file": true,
              "search_files": true,
              "read_text_file": true,
              "read_multiple_files": true,
              "read_file": true,
              "read_media_file": true,
              "move_file": true,
              "list_directory_with_sizes": true,
              "list_directory": true,
              "list_allowed_directories": true,
              "get_file_info": true,
              "edit_file": true,
              "directory_tree": true,
              "create_directory": true
            }
          }
        }
      }
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "model_parameters": [],
    "always_allow_tool_actions": true
  },
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "formatter": "prettier",
  "format_on_save": "off",
  "context_servers": {
    "mcp-server-github": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "github_personal_access_token": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "source": "custom",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/muhammadnurislomtukhtamishhoji-zoda/Desktop",
        "/Users/muhammadnurislomtukhtamishhoji-zoda/Downloads"
      ],
      "env": {}
    }
  },
  "confirm_quit": true
}
